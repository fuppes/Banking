<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Banking.Kontoauszugfehler"
             Title="Kontoauszugfehler">
    <VerticalStackLayout>

        <Image
            Source="fehler.png"
            HeightRequest="110"
            Aspect="AspectFit"
            SemanticProperties.Description="Error Logo Kontoauszüge" />


        <Label 
            Text="Kontonummer ungültig, bitte überprüfen sie die Kontonummer !"
            Style="{StaticResource SubHeadline}"
            TextColor="Red"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

      <Label
            Text="       uhuhuhhuhhuh  "
            TextColor="white"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="CounterBtn14"
            BackgroundColor="Black"
            Text="Zurück zum Kontoauszug" 
            SemanticProperties.Hint="go to Kontoauszug-page"
            Clicked="CounterBtn14_Clicked_1"
            HorizontalOptions="Center" />
        
    </VerticalStackLayout>
</ContentPage>